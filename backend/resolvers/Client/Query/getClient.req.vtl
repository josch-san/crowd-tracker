{
  "version": "2017-02-28",
  "operation": "Query",
  "query": {
    "expression" : "pk = :pk AND sk = :metadata",
    "expressionValues" : {
      ":pk" : $util.dynamodb.toDynamoDBJson("CLIENT#$ctx.args.clientId"),
      ":metadata" : $util.dynamodb.toDynamoDBJson("#METADATA#$ctx.args.clientId")
    }
  }
}